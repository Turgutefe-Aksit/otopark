
@{ ViewBag.Title = "CarList"; }

<h2 style="color:white">Car List / Araba Listeleme</h2>

@using MVCTrainProject.Models
@model List<car>
@{ ViewBag.Title = "Index"; }

<!DOCTYPE html>

<html>
<head>

    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.6.0.min.js"></script>
    <title>Car List</title>
    <script>

        function Alert(id) {

            alert(id + ". Araba Silindi");

        }
    </script>
</head>
<body>
    <div class="container">
        <div class="col-md-7">
            <div>
                <table style="border: 3px solid black; background-color: white; text-align: center; padding:10px">
                    <thead>
                        <tr>
                            <th style="border: 1px solid black; padding: 10px">Car Id</th>
                            <th style="border: 1px solid black; padding: 10px">Customer First Name</th>
                            <th style="border: 1px solid black; padding: 10px">Customer Last Name</th>
                            <th style="border: 1px solid black; padding: 10px">Number Plate</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var car in Model)
                        {
            <tr style="border: 1px solid black; padding: 10px">
                <td style="border: 1px solid black; padding: 10px">@car.car_id</td>
                <td style="border: 1px solid black; padding: 10px">@car.customer.fname</td>
                <td style="border: 1px solid black; padding: 10px">@car.customer.lname</td>
                <td style="border: 1px solid black; padding: 10px">@car.car_plate</td>
                <td style="border: 1px solid black"><a href="/Car/Delete/@car.car_id" onclick="Alert(@car.car_id)" id="@car.car_id" class="btn btn-danger">SİL / DELETE</a> </td>

                <br />
            </tr>}
                    </tbody>
                </table>
            </div>

        </div>

        <div class="col-md-7">

        </div>
    </div>

</body>
</html>