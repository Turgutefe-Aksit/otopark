@using MVCTrainProject.Models
@model List<park_place>
@{ ViewBag.Title = "Index"; }


<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.6.0.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title>Index</title>
    <link href="css/bootstrap.min.css" rel="stylesheet">

</head>
<body>
    <div class="baslik" style="float:right; padding:30px;">
        <h2 style="color:white"><b>Otopark Durumu / Park Situation</b></h2>
    </div>

    <div class="dis_bolme">
        <div class="ic_bolme" style="float:left; padding:30px;">

            <table>
                @foreach (var park_place in Model)
                {
                    if (park_place.loc_number <= 5)
                    {
    <tr>
        <td><div style="width: 150px; height: 50px; background-color: white; border-radius: 10px">Park @park_place.loc_number <b>@park_place.occupancy_info </b></td>
    </tr>
                        <tr>
                            <td> <br /> </td>
                        </tr>}
                                    }
            </table>
        </div>

        <div class="ic_bolme" style="padding:30px">

            <table>
                @foreach (var park_place in Model)
                {
                    if (park_place.loc_number > 5)
                    {
    <tr>
        <td><div style="width:150px; height:50px; background-color:white; border-radius:10px">Park @park_place.loc_number <b>@park_place.occupancy_info </b></td>
    </tr>
                        <tr>
                            <td> <br /> </td>
                        </tr>}
                                    }

            </table>
            <div>
                <br /> <br />
                <a href="/Park/Park_Registration" class="btn btn-success">Otopark Giriş</a>
                <br /> <br />
                <a href="/Park/Registration_Delete" class="btn btn-danger">Otopark Çıkış</a>
                <br /> <br />
                <a href="/Park/ParkList" class="btn btn-info">Otopark Kayıt Listesi</a>
            </div>

        </div>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
</html>

