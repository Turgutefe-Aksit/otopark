@using MVCTrainProject.Models
@model List<registration_date>
@{ ViewBag.Title = "Registration_Delete"; }

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.6.0.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <script>

        function Alert() {

            alert("Kayıt Başarıyla Sonlandırıldı");

        }
    </script>
</head>
<body>
    <h2 style="color:white">Registration Delete / Kayıt Silme </h2>

    <div class="container">

        <table style="background-color: white">
            @foreach (var regist in Model)
            {
                if (@regist.leave_time == null)
                {
<tr style="border: 1px solid black">
    <td style="border: 1px solid black; padding:10px">@regist.r_date_id</td>
    <td style="border: 1px solid black; padding: 10px">@regist.car.car_plate</td>
    <td style="border: 1px solid black; padding: 10px">@regist.loc_number</td>
    <td style="border: 1px solid black; padding: 10px">@regist.entery_time</td>
    <td style="border: 1px solid black"><a href="/Park/End_Process/@regist.r_date_id" onclick="Alert()" class="btn btn-warning">Parkı Sonlandır</a> </td>
    <br />
</tr>                }
            }
        </table>
    </div>
</body>